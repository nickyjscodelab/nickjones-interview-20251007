<Application x:Class="Workflow.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Workflow.Wpf.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <conv:PriorityToBrushConverter x:Key="PriorityToBrush" />
        <conv:StatusToBrushConverter x:Key="StatusToBrush" />
        <conv:DecisionToBrushConverter x:Key="DecisionToBrush" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8,4" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Application.Resources>
</Application>
