<Window x:Class="Workflow.Wpf.Views.CreateRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Project Request" Height="420" Width="520" WindowStartupLocation="CenterOwner" Background="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Create New Request" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
        <StackPanel Grid.Row="1" >
            <TextBlock Text="Title" />
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Description" Margin="0,8,0,0" />
            <TextBox Height="100" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Priority" Margin="0,8,0,0" />
            <ComboBox SelectedItem="{Binding Priority}" >
                <ComboBoxItem Content="Low" />
                <ComboBoxItem Content="Medium" />
                <ComboBoxItem Content="High" />
                <ComboBoxItem Content="Critical" />
            </ComboBox>
            <TextBlock Text="Due Date" Margin="0,8,0,0" />
            <DatePicker SelectedDate="{Binding DueDate}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" IsCancel="True" />
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
