<Window x:Class="Workflow.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="clr-namespace:Demo.Workflow.Domain;assembly=Workflow.Contracts"
        mc:Ignorable="d"
        Title="Workflow Management" Height="720" Width="1180" Background="#f9fafb">
    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="White" BorderBrush="#e5e7eb" BorderThickness="0,0,0,1" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Workflow Management" FontSize="20" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" >
                    <TextBlock Text="{Binding CurrentUser.Name}" Margin="0,0,8,0" />
                    <TextBlock Text="(" Foreground="Gray" />
                    <TextBlock Text="{Binding CurrentUser.Role}" Foreground="Gray" />
                    <TextBlock Text=")" Foreground="Gray" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters / Actions -->
        <StackPanel Orientation="Horizontal" Margin="16,12,16,4">
            <ComboBox Width="140" SelectedItem="{Binding StatusFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content=""/>
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>Draft</sys:String>
                        <sys:String>Submitted</sys:String>
                        <sys:String>Approved</sys:String>
                        <sys:String>Rejected</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
            <TextBox Width="220" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" ToolTip="Search" />
            <Button Content="New Request" Click="NewRequest_Click" />
            <Button Content="Refresh" Command="{Binding RefreshCommand}" />
            <TextBlock Text="Loading..." Foreground="Gray" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Margin="16" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Requests list -->
            <Border Background="White" CornerRadius="6" Padding="8" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,8,0">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding RequestsView}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type domain:ProjectRequest}">
                                <Border BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="4" Padding="8" Margin="4" Background="White" MouseLeftButtonUp="RequestCard_Click">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" />
                                            <Border Background="{Binding Status, Converter={StaticResource StatusToBrush}}" Margin="8,0,0,0" Padding="4,2" CornerRadius="3">
                                                <TextBlock Text="{Binding Status}" FontSize="11" />
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Grid.Row="1" Text="{Binding Description}" Foreground="#555" FontSize="12" />
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Background="{Binding Priority, Converter={StaticResource PriorityToBrush}}" Padding="4,2" CornerRadius="3" Grid.Column="0" >
                                                <TextBlock Text="{Binding Priority}" FontSize="11" />
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{Binding CreatedUtc, StringFormat={}{0:g}}" Foreground="#777" FontSize="11" Margin="8,0,0,0" />
                                            <TextBlock Grid.Column="2" HorizontalAlignment="Right" Text="{Binding SignOffs.Count, StringFormat={}{0} sign-offs}" Foreground="#777" FontSize="11" Margin="8,0,0,0" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="12" BorderBrush="#ddd" BorderThickness="1">
                <ContentPresenter>
                    <ContentPresenter.Content>
                        <Grid DataContext="{Binding SelectedRequest}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
                                <Border Background="{Binding Status, Converter={StaticResource StatusToBrush}}" Margin="8,0,0,0" Padding="6,3" CornerRadius="3">
                                    <TextBlock Text="{Binding Status}" />
                                </Border>
                            </StackPanel>
                            <ScrollViewer Grid.Row="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#444" Margin="0,0,0,8" />
                                    <WrapPanel Margin="0,0,0,12" >
                                        <Border Background="{Binding Priority, Converter={StaticResource PriorityToBrush}}" Padding="6,3" CornerRadius="3" Margin="0,0,8,0"><TextBlock Text="{Binding Priority}" /></Border>
                                        <TextBlock Text="{Binding RequestedBy}" Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding CreatedUtc, StringFormat={}{0:g}}" Foreground="#777" />
                                    </WrapPanel>
                                    <TextBlock Text="Sign-offs" FontWeight="SemiBold" />
                                    <ItemsControl ItemsSource="{Binding SignOffs}" Margin="0,4,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type domain:SignOff}">
                                                <Border BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,4,0,0">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" >
                                                            <TextBlock Text="{Binding Role}" FontWeight="Bold" />
                                                            <TextBlock Text=" - " />
                                                            <TextBlock Text="{Binding ReviewerName}" />
                                                            <Border Background="{Binding Decision, Converter={StaticResource DecisionToBrush}}" Margin="8,0,0,0" Padding="4,2" CornerRadius="3">
                                                                <TextBlock Text="{Binding Decision}" FontSize="11" />
                                                            </Border>
                                                            <TextBlock Text="{Binding TimestampUtc, StringFormat={}{0:g}}" Foreground="#777" Margin="8,0,0,0" FontSize="11" />
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Comment}" FontStyle="Italic" Foreground="#555" FontSize="11" />
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                <ComboBox Width="140" SelectedItem="{Binding DataContext.NewSignOffDecision, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="{Binding DataContext.CanSignOff, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ComboBoxItem Content="Approved" />
                                    <ComboBoxItem Content="Rejected" />
                                </ComboBox>
                                <TextBox Width="200" Text="{Binding DataContext.NewSignOffComment, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="{Binding DataContext.CanSignOff, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}" ToolTip="Comment" />
                                <Button Content="Add Sign-Off" Command="{Binding DataContext.AddSignOffCommand, RelativeSource={RelativeSource AncestorType=Window}}" Visibility="{Binding DataContext.CanSignOff, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </Grid>
                    </ContentPresenter.Content>
                </ContentPresenter>
            </Border>
        </Grid>
    </DockPanel>
</Window>
